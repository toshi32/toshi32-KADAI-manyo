<h3>以下の内容で、タスク作成しますか？？</h3>
<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
<%= form.hidden_field :title %>
<%= form.hidden_field :content %>
<%= form.hidden_field :limit %>
<%= form.hidden_field :status_name %>
<%= form.hidden_field :priority %>
<p>タスク名:<%= @task.title %></p>
<p>内容:<%= @task.content %></p>
<p>終了日<%= l @task.limit, format: :long %></p>
<p>ステータス<%= @task.status_name %></p>
<p>優先度<%= @task.priority %></P>
<%= form.submit  "登録する" %>
<%= form.submit "戻る", name: 'back' %>
<% end %>